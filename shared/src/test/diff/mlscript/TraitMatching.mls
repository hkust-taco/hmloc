
trait MyTrait[A]: { value: A }
//│ Defined trait MyTrait[+A]


def test1 x = case x of { MyTrait -> x.value | _ -> 0 }
//│ test1: ({value: 'value} & #MyTrait | ~#MyTrait) -> (0 | 'value)
//│      = [Function: test1]

:e
test1 1
//│ ╔══[ERROR] Type mismatch in application:
//│ ║  l.11: 	test1 1
//│ ║        	^^^^^^^
//│ ╟── integer literal of type `1 & #MyTrait | 1 & ~?a` is not a 1-element tuple
//│ ║  l.11: 	test1 1
//│ ║        	      ^
//│ ╟── Note: constraint arises from reference:
//│ ║  l.6: 	def test1 x = case x of { MyTrait -> x.value | _ -> 0 }
//│ ║       	                   ^
//│ ╟── from receiver:
//│ ║  l.6: 	def test1 x = case x of { MyTrait -> x.value | _ -> 0 }
//│ ╙──     	                                     ^
//│ res: 0 | error
//│    = 0




test1 { value = 1 }
//│ res: 0 | 1
//│    = 0

def mt = MyTrait { value = 1 }
//│ mt: {value: 1} & #MyTrait
//│   = [Function: mt]

test1 mt
//│ res: 0 | 1
//│    = 1

class C1: MyTrait[int]
//│ Defined class C1

test1 (C1 { value = 1 })
//│ res: 0 | 1
//│    = 1


